@{
    ViewBag.Title = "Register";
}
<script src="@Url.Content("~/Scripts/LoginControlModule/Register.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/LoginControlModule/Login.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/css/Login.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/css/Index.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/css/Register.css")" rel="stylesheet" type="text/css" />
<div id="Home">    
    <!--Head结束-->
    <div id="Center">
        <div>
            <font style=" font-size:23px; position:relative;top:0px;left:0px; color:#017586;">新用户注册</font>
        </div>
        <table  style="border:0; position:relative; left:70px; top:30px;">
            <tr class="Reg_TR">
                <td class="Reg_TD"><font style="color:Red;">*</font>&nbsp;用户名：</td>
                <td class="Reg_Input_TD">
                    <input class="Reg_Input" id="username"/>
                    <div class="Reg_TD_Inf usernameInf">用户名将用作登录使用，6—12个字符，支持字母，数字，下划线</div>
                </td>
            </tr>
            <tr class="Reg_TR">
                <td class="Reg_TD"><font style="color:Red;">*</font>&nbsp;真实姓名：</td>
                <td class="Reg_Input_TD">
                    <input class="Reg_Input" id="realname" />
                    <div class="Reg_TD_Inf realnameInf">真实姓名将在全站显示，必须为2-8个汉字</div>
                </td>
            </tr>
            <tr class="Reg_TR">
                <td class="Reg_TD"><font style="color:Red;">*</font>&nbsp;昵称：</td>
                <td class="Reg_Input_TD">
                    <input class="Reg_Input" id="nickname" />
                    <div class="Reg_TD_Inf nicknameInf">昵称将作为您的上传知识的署名，2—8个字符，支持汉字，字母，数字</div>
                </td>
            </tr>
            <tr class="Reg_TR">
                <td class="Reg_TD"><font style="color:Red;">*</font>&nbsp;性别：</td>
                <td class="Reg_Input_TD" style="margin-top:15px;">
                    <input type="radio" name="gender" style="border:none!important;" checked="checked" value="M"/>&nbsp;&nbsp;男<input type="radio" name="gender"  style="border:none!important; margin-left:20px;" value="F"/>&nbsp;&nbsp;女
                </td>
            </tr>
            <tr class="Reg_TR">
                <td class="Reg_TD"><font style="color:Red;">*</font>&nbsp;密码：</td>
                <td class="Reg_Input_TD">
                    <input class="Reg_Input" id="pwd" type="password"/>
                    <div class="Reg_TD_Inf pwdInf">为了您的账号安全，建议使用字符+数字等多种不同类型的组合，且长度大于6位</div>
                </td>
            </tr>
            <tr class="Reg_TR">
                <td class="Reg_TD"><font style="color:Red;">*</font>&nbsp;确认密码：</td>
                <td class="Reg_Input_TD">
                    <input class="Reg_Input" id="repwd" type="password"/>
                    <div class="Reg_TD_Inf repwdInf">确保您记住密码</div>
                </td>
            </tr>
            <tr class="Reg_TR">
                <td class="Reg_TD"><font style="color:Red;">*</font>&nbsp;个人说明：</td>
                <td class="Reg_Input_TD">
                    <textarea rows="6" cols="50" id="explain"></textarea>
                    <div class="Reg_TD_Inf explainInf">请准确填写您的部门信息，以便管理员进行审核</div>
                </td>
            </tr>
        </table>
        <div id="Reg_Submit">注&nbsp;&nbsp;&nbsp;册</div>
        <div id="Reg_Reset">重&nbsp;&nbsp;&nbsp;置</div>
    </div>
    <div id="RegLoginFlag" style="display:none;">RegLoginFlag</div>
    <!--HomeContent结束-->
</div>
